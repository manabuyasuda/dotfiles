{
  "model": "claude-sonnet-4-6",
  "hooks": {
    "WorktreeCreate": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/worktree-create.sh"
          }
        ]
      }
    ],
    "WorktreeRemove": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/worktree-remove.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/bash-guard.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -sender com.apple.Terminal -title \"Claude Code: $(basename \"$CLAUDE_PROJECT_DIR\")\" -message '確認が必要です' -sound Glass"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -sender com.apple.Terminal -title \"Claude Code: $(basename \"$CLAUDE_PROJECT_DIR\")\" -message '入力待ちです' -sound Glass"
          }
        ]
      },
      {
        "matcher": "stop",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -sender com.apple.Terminal -title \"Claude Code: $(basename \"$CLAUDE_PROJECT_DIR\")\" -message '処理が完了しました' -sound Glass"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(gh pr list*)",
      "Bash(gh pr view*)",
      "Bash(gh pr diff*)",
      "Bash(gh pr checks*)",
      "Bash(gh pr status*)",
      "Bash(gh pr checkout*)",
      "Bash(gh pr comment*)",
      "Bash(gh pr review*)",
      "Bash(gh notify*)",
      "Bash(gh repo view*)",
      "Bash(gh repo list*)",
      "Bash(gh api repos*)",
      "Bash(gh api notifications*)",
      "Bash(gh api graphql*)",
      "Bash(gh api user*)",
      "Bash(gh search*)",
      "Bash(gh dash*)",
      "Bash(gh f*)",
      "Bash(gh s*)",
      "Bash(git log*)",
      "Bash(git status*)",
      "Bash(git stash list*)",
      "Bash(git branch --show-current*)",
      "Bash(git diff*)",
      "Bash(git show*)",
      "Bash(git remote*)",
      "Bash(gh issue list*)",
      "Bash(gh issue view*)",
      "Bash(gh run list*)",
      "Bash(gh run view*)",
      "Bash(madge*)",
      "Bash(knip*)",
      "Bash(depcruise*)",
      "Bash(semgrep*)",
      "Bash(type-coverage*)",
      "Bash(fd*)",
      "Bash(tree*)",
      "Bash(html-validate*)",
      "Bash(ncu)",
      "Bash(ncu --filter*)",
      "Bash(ncu --format*)",
      "Bash(ncu --target*)",
      "Bash(ncu --global*)",
      "Bash(ncu -g*)",
      "Bash(ncu --peer*)",
      "Bash(ncu --packageFile*)",
      "Bash(ncu --reject*)",
      "Bash(ncu --dep*)",
      "Bash(ncu --packageManager*)",
      "Bash(wallace*)",
      "Bash(colorguard*)",
      "Bash(bundle-phobia*)",
      "Bash(axe*)",
      "Bash(firebase list*)",
      "Bash(firebase functions:list*)",
      "Bash(firebase hosting:channel:list*)",
      "Bash(vercel ls*)",
      "Bash(vercel list*)",
      "Bash(vercel inspect*)",
      "Bash(vercel logs*)",
      "Bash(vercel whoami*)",
      "Bash(vercel projects*)",
      "Bash(lhci collect*)",
      "Bash(lhci assert*)",
      "Bash(lhci open*)",
      "Bash(lhci healthcheck*)",
      "Bash(redocly lint*)",
      "Bash(redocly stats*)",
      "Bash(redocly bundle*)",
      "Bash(redocly split*)",
      "Bash(redocly check-config*)",
      "Bash(redocly build-docs*)"
    ],
    "deny": [
      "Bash(gh repo delete*)",
      "Bash(gh secret*)",
      "Bash(gh api --method DELETE*)",
      "Bash(gh api -X DELETE*)",
      "Bash(gh pr merge*)",
      "Bash(npm publish*)",
      "Bash(pnpm publish*)",
      "Bash(yarn publish*)"
    ]
  },
  "enabledPlugins": {
    "skill-creator@claude-plugins-official": true
  }
}
